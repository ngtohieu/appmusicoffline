<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtSongNameNotify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="TextView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_pre_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/rewind"
            app:srcCompat="@drawable/rewind" />

        <Button
            android:id="@+id/btn_play_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/play"
            app:srcCompat="@drawable/play" />

        <Button
            android:id="@+id/btn_next_notify"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/fastforward"
            app:srcCompat="@drawable/fastforward" />
    </LinearLayout>


</LinearLayout>